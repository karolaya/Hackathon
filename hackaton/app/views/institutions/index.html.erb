<p id="notice"><%= notice %></p>
<section id="one" class="wrapper style1" style="background-color:#FFFFFF">
  <div class="inner">
    <table>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Ciudad</th>
          <th>Tipo</th>
          <th>Estrato</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @institutions.each do |institution| %>
          <tr>
            <td><%= institution.nombre %></td>
            <td><%= institution.ciudad %></td>
            <td><%= institution.tipo.humanize %></td>
            <td><%= institution.estrato %></td>
            <td><%= link_to 'Show', institution, :class => "button alt" %></td>
            <td><%= link_to 'Edit', edit_institution_path(institution), :class => "button alt" %></td>
            <td><%= link_to 'Delete', institution, method: :delete, data: { confirm: 'Are you sure?' } , :class => "button alt"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Institution', new_institution_path, :class => "button alt" %>

  </div>
</section>
